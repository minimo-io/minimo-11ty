{
  "name": "@minimo-labs/minimo-11ty",
  "version": "0.0.1",
  "description": "A theme for the minimo.io website made with 11ty",
  "main": "/mo.js",
  "scripts": {
    "dev": "NODE_ENV=dev npm-run-all -p watch:*",
    "build": "npm-run-all build:eleventy -p build:postcss",
    "watch:11ty": "eleventy --serve",
    "build:11ty": "eleventy",
    "watch:postcss": "postcss src/css/style.css --dir _site --watch",
    "build:postcss": "postcss src/css/style.css --dir _site"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/minimo-io/minimo-11ty.git"
  },
  "keywords": [],
  "author": "Nicolas <nicolas@minimo.io> (https://minimo.io)",
  "license": "LGPL-2.1-only",
  "bugs": {
    "url": "https://github.com/minimo-io/minimo-11ty/issues"
  },
  "homepage": "https://github.com/minimo-io/minimo-11ty#readme",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "cssnano": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0"
  }
}
