{% import "macros/lists.njk" as list %}
{% import "macros/biking-map.njk" as biking with context %}
{% import "macros/gallery.njk" as gallery with context %}
{% import "macros/tags.njk" as tags with context %}

<div class="wrapper article text-justify mt-5">
    <h2 id="summary" class="h3 font-weight-600">
        🦄 <span class="font-italic">Latests. {{ somedata }}</span>
    </h2>
    <p class="font-italic">
        👉 Looking for <a href="/work/">my work</a>? ({{ collections.project.length }} projects)
    </p>
</div>

<div class="wrapper wrapper-wide mt-2">
    <a href="/blog/how-to-fine-tune-open-source-ai-models-for-fun-and-profit/" title="Fine-tunning open-source AI models for fun and profit">
        <figure>
            <img width="100%" src="/assets/images/blog/coding-ai-agents.webp" alt="coding-ai-agent" class="img-rounded img-rotate">
            <figcaption><strong>2025: Fine-tunning open-source AI models for fun and profit and more</strong> (latest article)</figcaption>
        </figure>
    </a>
</div>

<div class="wrapper wrapper-wide article text-justify mt-2">
    <div  class="archive mt-1 mb-4">
        {{ list.archive_with_dates(collections.posts, "2025", showTags=false) }}
        {{ list.archive_with_dates(collections.posts, "2024", showTags=false) }}
        {{ list.archive_with_dates(collections.posts, "2023", showTags=false) }}
        <br>
        <p>💯 <a href="/blog/" class="text-underline">Full archive here</a> ({{ collections.posts.length }} entries).</p>
    </div>

</div>


<div class="wrapper article text-justify mt-1">
    <div class="mb-2">
        <h2 id="biking" class="h3 font-weight-600">
            🚴🏼‍♂️ <span class="font-italic">Biking</span>
        </h2>
        <p class="font-italic">
            Latest bike adventure registered on a <a href="https://en.wikipedia.org/wiki/GPS_Exchange_Format" target="_blank" rel="noopener noreferrer">GPX file</a>.
            👉 All biking <i>tournées</i> <a href="/biking/">here</a>.
        </p>
    </div>
</div>

{{ biking.map(loadApp=false, wrap="wrapper wrapper-widest") }}

{# Galllery #}
<div class="wrapper wrapper-wide">
    <h2 id="photos" class="h3 font-weight-600 mt-3">
        🖼️ <span class="font-italic">Photos</span>
    </h2>
    <p class="font-italic">A collection of public available pictures.</p>

    <div class="archive article text-center line-height-2 mt-1">
        {{ gallery.grid() }}
