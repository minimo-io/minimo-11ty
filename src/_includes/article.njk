<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% if title %} {{ title }} - {% endif %}{{ site.name }}</title>
    {% if description %}<meta name="description" content="{{ description }}">{% endif %}
    <!-- <link rel="canonical" href="https://minimo.io"> -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant:ital,wght@0,300;0,400;0,600;1,400;1,600&family=Roboto+Mono:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="/style.css" rel="stylesheet" />
    <script src="/bundle.js" defer></script>
    <link href="/images/favicon.png" rel="icon" sizes="32x32">
    <style>svg{ max-width: 15px; }img{ max-width: 100%; }</style>
</head>
<body>
    <a href="#main" class="skip-to-main-content">Skip to main content</a>
    <div class="bg-grey">
        <div class="wrapper pt-1">
             {% include "nav.njk" %}
        </div>
        <div class="wrapper wrapper-wide text-center pb-2">
            <main id="main">
                <h1 class="font-italic font-weight-600">{{ title }}</h1>
                <h2 class="fs-400 line-height-1-2">{{ description }}</h2>
                <!-- <p style="font-size:var(--fs-clamped-200)" class="font-italic">March 25, 2023</p> -->
            </main>  
            <figure class="pt-2">
                <img src="/images/cool-image.jpg" alt="Some cool image" class="img-rounded">
                <figcaption>A caption for the above image</figcaption> 
            </figure>            
        </div>
    
    </div>

    {{ content | safe  }}

    {% include "footer.njk" %}
</body>
</html>